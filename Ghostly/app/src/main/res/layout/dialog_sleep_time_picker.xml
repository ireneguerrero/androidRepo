<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_corner_background"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/bed_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02:20 AM"
            android:textColor="@color/pastel_yellow"
            android:textSize="25sp"
            android:fontFamily="@font/fuente"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/wake_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:30 AM"
            android:textColor="@color/pastel_yellow"
            android:textSize="25sp"
            android:fontFamily="@font/fuente"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TimePicker
            android:id="@+id/time_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:timePickerMode="clock"
            android:background="@null" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/set_bed_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded"
            android:text="Set Bed Time"
            android:fontFamily="@font/fuente"
            android:textSize="18sp"
            android:textColor="@color/pastel_yellow"
            android:layout_gravity="center"
            android:padding="16dp" />

        <Button
            android:id="@+id/set_wake_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded"
            android:text="Set Wake Time"
            android:fontFamily="@font/fuente"
            android:textSize="18sp"
            android:textColor="@color/pastel_yellow"
            android:layout_gravity="center"
            android:padding="16dp"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/time_asleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time asleep 6h 10m"
            android:textColor="@color/pastel_yellow"
            android:fontFamily="@font/fuente"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rounded"
        android:text="Done"
        android:fontFamily="@font/fuente"
        android:textSize="18sp"
        android:textColor="@color/pastel_yellow"
        android:layout_gravity="center"
        android:padding="16dp" />
</LinearLayout>
