<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_light_purple"
    tools:context=".StatisticsActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header with Month and Year Selection -->
            <LinearLayout
                android:id="@+id/header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp">

                <TextView
                    android:id="@+id/month_year_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Feb 2024"
                    android:textSize="25sp"
                    android:fontFamily="@font/fuente"
                    android:textColor="@color/pastel_yellow" />

            </LinearLayout>

            <!-- Basic Analysis Section -->
            <TextView
                android:id="@+id/basic_analysis_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/basic_analysis"
                android:textSize="20sp"
                android:fontFamily="@font/fuente"
                android:textColor="@color/pastel_yellow"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal" />

            <!-- Mood Flow Chart -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/mood_flow_chart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="16dp" />

            <!-- Mood Bar -->
            <LinearLayout
                android:id="@+id/mood_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp">

                <TextView
                    android:id="@+id/mood_bar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mood_bar"
                    android:textSize="20sp"
                    android:fontFamily="@font/fuente"
                    android:textColor="@color/pastel_yellow" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/mood_bar_chart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="16dp" />

            </LinearLayout>

            <!-- Sleep Analysis -->
            <LinearLayout
                android:id="@+id/sleep_analysis_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp">

                <TextView
                    android:id="@+id/sleep_analysis_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sleep_analysis"
                    android:textSize="20sp"
                    android:fontFamily="@font/fuente"
                    android:textColor="@color/pastel_yellow" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/average_bedtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AM 00:00"
                            android:textSize="24sp"
                            android:fontFamily="@font/fuente"
                            android:textColor="@color/pastel_yellow" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/average_bedtime"
                            android:textSize="14sp"
                            android:fontFamily="@font/fuente"
                            android:textColor="@color/pastel_yellow" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/average_wake_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AM 00:00"
                            android:textSize="24sp"
                            android:fontFamily="@font/fuente"
                            android:textColor="@color/pastel_yellow" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/average_wakeup"
                            android:textSize="14sp"
                            android:fontFamily="@font/fuente"
                            android:textColor="@color/pastel_yellow" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/average_sleep_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="h 00:00"
                            android:textSize="24sp"
                            android:fontFamily="@font/fuente"
                            android:textColor="@color/pastel_yellow" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/average_sleep"
                            android:textSize="14sp"
                            android:fontFamily="@font/fuente"
                            android:textColor="@color/pastel_yellow" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
